                                                            </DataGrid>
                                                        </StackPanel>
                                                    </materialDesign:PopupBox>
                                                    <Separator/>
                                                    <materialDesign:PopupBox Height="100" ToolTip="Bail information">
                                                        <materialDesign:PopupBox.ToggleContent>
                                                            <materialDesign:PackIcon Kind="Newspaper" Width="40" Height="29" Foreground="White" />
