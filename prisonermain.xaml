                                                            <materialDesign:PackIcon Kind="NoteMultiple" Width="40" Height="29" Foreground="White" />
                                                        </materialDesign:PopupBox.ToggleContent>
                                                        <StackPanel>

                                                            <DataGrid x:Name="datagrid_case" Grid.ColumnSpan="3" Height="525" Margin="20" MouseDoubleClick="datagrid_case_MouseDoubleClick" SelectionChanged="datagrid_case_SelectionChanged">
