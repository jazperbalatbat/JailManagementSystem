<Window x:Class="JailManagementSystem.loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JailManagementSystem"
        ContentRendered="Window_ContentRendered"
        mc:Ignorable="d"
        Title="loading" Height="65" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <StackPanel Orientation="Vertical" Background="#FF5B5B5B" >
        <ProgressBar Margin="10" Minimum="0" Maximum="5" Name="pbStatus" BorderThickness="10" Height="20"/>
        <TextBlock Text="Please Wait..." FontSize="15" FontWeight="Bold" Margin="150 0 0 0"/>
    </StackPanel>
</Window>
