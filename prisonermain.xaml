                                        </Grid>
                                        <!-- UPDATE AND CANCEL BUTTON-->

                                        <StackPanel>

                                            <!--BAIL PRISONER-->
                                            <StackPanel Margin="0 30 0 0" x:Name="bail" Visibility="Hidden">
                                                <TextBlock Margin="20" Grid.Column="0" Text="BAIL PRISONER" FontWeight="Bold" FontSize="35" Foreground="#FF89B8E6"/>

                                               

