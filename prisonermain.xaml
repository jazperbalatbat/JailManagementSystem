                                                            </DataGrid>
                                                        </StackPanel>
                                                    </materialDesign:PopupBox>
                                                    <Separator/>
                                                    <materialDesign:PopupBox Height="100" ToolTip="cell information">
                                                        <materialDesign:PopupBox.ToggleContent>
                                                            <materialDesign:PackIcon Kind="BorderAll" Width="40" Height="29" Foreground="White" />
                                                        </materialDesign:PopupBox.ToggleContent>
                                                        <StackPanel>

                                                          
                                                            <DataGrid x:Name="datagrid_cell" Grid.ColumnSpan="3" Height="525" Margin="20" SelectionChanged="datagrid_cell_SelectionChanged">
